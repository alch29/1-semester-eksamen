{{> nav title=title backHref="/admin/stations"}}
<br>
<div>
  <div><b>Address</b></div>
  <div>{{station.address}}</div>
</div>
<br>
<div>
  <div><b>Contact information</b></div>
  <div>Phone: +45 {{station.phone}}</div>
  <div>Mail: {{station.email}}</div>
</div>
<br>
<a href="/admin/stations/{{station.id}}/update-cleaning" class="checkbox-link-forecourt">
  <div class="topBotBorderBox checkboxCourt courtCheckboxWrapper">
    <input 
      type="checkbox"
      name="cleanForecourt"
      {{#if station.cleaning_of_forecourt}}checked{{/if}}
    >
    <span>Clean forecourt</span>
  </div>
</a>

<br>
<div class="headline textAlignCenter">Staff member</div>
<br>
{{#if station.user}}
  <div class="topBotBorderBox">{{station.user.name}}</div>
{{else}}
  <div>No staff member assigned</div>
{{/if}}
<br>
<a href="/admin/stations/manage?stationId={{station.id}}&userId={{station.user.id}}" class="button1">
  Manage staff
</a>


