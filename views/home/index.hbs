<div class="gap">
  <form method="post" action="/" class="gap">
    <h1 class="headline">Login</h1>
    
    {{#if success}}
      <div class="success-message">{{success}}</div>
    {{/if}}
    
    {{#if error}}
      <div class="error-message">{{error}}</div>
    {{/if}}
    
    <input
      class="activeInputField"
      type="text"
      name="email"
      placeholder="Email"
    />
    <input
      class="activeInputField"
      type="password"
      name="password"
      placeholder="Password"
    />
    <a href="/forgot-password" class="paragraph">Forgot your password?</a>
    
    <button type="submit" class="button2">Login</button>
  </form>
  <div class="gap2">
    <p class="subHeadline">Are you not registered yet?</p>
    <a href="/register" class="button2">Register new user</a>
  </div>
</div>